<% @page_title = "UserAuth | Login" -%>
<div class= "Sign_Form">
  <h1>Log in</h1>
  <%= form_tag(:action => 'login_attempt') do %>
  <div class="form-group">
    	<label>Username or Email:</label> <%= text_field_tag(:username_or_email, nil, class: "form-control") %>
  </div>
  <div class="form-group">
    	<label>Password:</label> <%= password_field_tag :login_password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
   		<%= submit_tag("Log In", class: "btn btn-default") %>
  </div>
  <% end %>
</div>

<p><%= link_to 'Or sign up here...', :controller => "users", :action => "new" %></p>